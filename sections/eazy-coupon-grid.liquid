{% comment %}
  EazyCouponz "Smart" Coupon Grid Section
  - Fully editable via Shopify Admin
{% endcomment %}

<style>
  .ec-section-{{ section.id }} {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.bg_color }};
  }
  .ec-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  .ec-header { text-align: center; margin-bottom: 40px; }
  .ec-header h2 { color: #333; font-size: 28px; margin-bottom: 10px; }
  
  .ec-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 25px;
  }
  
  /* Card Styling */
  .ec-card {
    background: #fff;
    border: 1px solid #e1e1e1;
    border-radius: 12px;
    padding: 20px;
    text-align: center;
    transition: transform 0.2s, box-shadow 0.2s;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  .ec-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.08);
  }
  
  .ec-logo-area {
    height: 60px;
    margin-bottom: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    color: #555;
    font-size: 18px;
    background: #f9f9f9;
    border-radius: 8px;
  }
  
  .ec-offer-text { font-size: 18px; font-weight: 600; color: #333; margin-bottom: 5px; }
  .ec-desc { font-size: 14px; color: #777; margin-bottom: 20px; }
  
  /* Button Area */
  .ec-button-wrapper {
    position: relative;
    height: 45px;
    background: #f4f4f4;
    border: 1px dashed #2D9CDB;
    border-radius: 6px;
    cursor: pointer;
    overflow: hidden;
  }
  .ec-hidden-code {
    position: absolute; top: 0; left: 0; width: 100%; height: 100%;
    display: flex; align-items: center; justify-content: center;
    font-weight: bold; color: #333; letter-spacing: 1px; z-index: 1;
  }
  .ec-reveal-btn {
    position: absolute; top: 0; left: 0; width: 100%; height: 100%;
    background: #6FCF97; color: white;
    display: flex; align-items: center; justify-content: center;
    font-weight: 600; z-index: 2;
    transition: transform 0.3s ease;
  }
  .ec-reveal-btn:hover { background: #5bb582; }
  .ec-revealed .ec-reveal-btn { transform: translateX(100%); }
  
  .ec-copied-msg {
    margin-top: 8px; font-size: 12px; color: #2D9CDB;
    opacity: 0; transition: opacity 0.3s;
  }
  .ec-revealed + .ec-copied-msg { opacity: 1; }
</style>

<div class="ec-section-{{ section.id }}">
  <div class="ec-container">
    <div class="ec-header">
      <h2>{{ section.settings.title }}</h2>
      <p>{{ section.settings.subtitle }}</p>
    </div>

    <div class="ec-grid">
      {% for block in section.blocks %}
        <div class="ec-card" {{ block.shopify_attributes }}>
          <div class="ec-logo-area">
            {% if block.settings.brand_logo != blank %}
              <img src="{{ block.settings.brand_logo | image_url: width: 120 }}" alt="{{ block.settings.brand_name }}" style="max-height: 40px;">
            {% else %}
              {{ block.settings.brand_name }}
            {% endif %}
          </div>
          <div class="ec-offer-text">{{ block.settings.offer_text }}</div>
          <div class="ec-desc">{{ block.settings.description }}</div>
          
          <div class="ec-button-wrapper" onclick="revealCode(this, '{{ block.settings.coupon_code }}')">
            <div class="ec-hidden-code">{{ block.settings.coupon_code }}</div>
            <div class="ec-reveal-btn">SHOW CODE</div>
          </div>
          <div class="ec-copied-msg">Code copied!</div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script>
  function revealCode(element, code) {
    element.classList.add('ec-revealed');
    navigator.clipboard.writeText(code);
  }
</script>

{% schema %}
{
  "name": "Eazy Coupon Grid",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Today's Top Deals"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Click to reveal and copy the best codes."
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "coupon",
      "name": "Coupon",
      "settings": [
        {
          "type": "text",
          "id": "brand_name",
          "label": "Brand Name",
          "default": "BRAND"
        },
        {
          "type": "image_picker",
          "id": "brand_logo",
          "label": "Brand Logo (Optional)"
        },
        {
          "type": "text",
          "id": "offer_text",
          "label": "Offer Text",
          "default": "20% OFF"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "Valid on all orders."
        },
        {
          "type": "text",
          "id": "coupon_code",
          "label": "Coupon Code",
          "default": "SAVE20"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Eazy Coupon Grid",
      "blocks": [
        { "type": "coupon" },
        { "type": "coupon" },
        { "type": "coupon" }
      ]
    }
  ]
}
{% endschema %}
